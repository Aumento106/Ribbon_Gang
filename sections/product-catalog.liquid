{{ 'section-product-catalog.css' | asset_url | stylesheet_tag }}

{% schema %}
{
  "name": "Product Catalog",
  "settings": [
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background Image"
    },
    {
      "type": "image_picker",
      "id": "product_image",
      "label": "Product Image"
    },
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Product Catalog 2024"
    },
    {
      "type": "color",
      "id": "heading_highlight_color",
      "label": "Heading Highlight Color",
      "default": "#FFD700"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Description",
      "default": "<p>Click the link to view our comprehensive product and services catalog. View in a browser window without the need for a download.</p>"
    },
    {
      "type": "text",
      "id": "button_1_text",
      "label": "Primary Button Text",
      "default": "View Catalog"
    },
    {
      "type": "url",
      "id": "button_1_link",
      "label": "Primary Button Link"
    },
    {
      "type": "text",
      "id": "button_2_text",
      "label": "Secondary Button Text",
      "default": "Download Catalog"
    },
    {
      "type": "url",
      "id": "button_2_link",
      "label": "Secondary Button Link"
    }
  ],
  "presets": [
    {
      "name": "Product Catalog"
    }
  ]
}
{% endschema %}

<div class="product-catalog-section">
  <div class="product-catalog-container">
    <div class="product-catalog-left">
      {% if section.settings.background_image %}
        <div class="background-image">
          {{ section.settings.background_image | image_url: width: 1500 | image_tag }}
        </div>
      {% endif %}
      {% if section.settings.product_image %}
        <div class="product-image">
          {{ section.settings.product_image | image_url: width: 800 | image_tag }}
        </div>
      {% endif %}
    </div>
    
    <div class="product-catalog-right">
      {% if section.settings.logo %}
        <div class="logo">
          {{ section.settings.logo | image_url: width: 300 | image_tag }}
        </div>
      {% endif %}
      
      <h2 class="heading">
        {% assign words = section.settings.heading | split: ' ' %}
        {% for word in words %}
          {% if word == 'Catalog' %}
            <span class="highlight">{{ word }}</span>
          {% else %}
            {{ word }}
          {% endif %}
        {% endfor %}
      </h2>
      
      <div class="description">
        {{ section.settings.description }}
      </div>
      
      <div class="buttons">
        {% if section.settings.button_1_link %}
          <a href="{{ section.settings.button_1_link }}" class="button button-primary">
            {{ section.settings.button_1_text }}
          </a>
        {% endif %}
        
        {% if section.settings.button_2_link %}
          <a href="{{ section.settings.button_2_link }}" class="button button-secondary">
            {{ section.settings.button_2_text }}
          </a>
        {% endif %}
      </div>
    </div>
  </div>
</div>
