{{ 'team-member.css' | asset_url | stylesheet_tag }}


{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.mobile_padding_top }}px;
    padding-bottom: {{ section.settings.mobile_padding_bottom }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}


<div class="color-{{ section.settings.color_scheme }}">
  <div class="team-section page-width">
  {% if section.settings.title != blank %}
    <h2 class="section-title text-center">{{ section.settings.title }}</h2>
  {% endif %}


    
  <div class="section-{{ section.id }}-padding team-grid">
    
      {% for members in shop.metaobjects.our_team.values %}
      {% comment %}<div class="team-member" {{ block.shopify_attributes }}>
        
          <div class="team-member-image">
         {{ members.employee_image | img_url: width:250 | img_tag  }}
          </div>
        
        
        <div class="team-member-detail-wrp">
          <p class="team-member-name">{{ members.employee_name }}</p>
            <div class="team-member-position">{{ members.employee_designation }}</div>
            <div class="team-description">
              Adam leads Product Sales and is often the friendly voice you’ll hear when you call. With 15 years of hands-on industry experience, Adam’s in-depth product knowledge and exceptional customer engagement skills have been key to his success in delivering outstanding client satisfaction.
            </div>
            
            <div class="social-links">
              {% for image in  members.social_media_icons.value %}
                <a href="{{ members.icon_link.value[forloop.index0] }}" class="social-link" target="_blank" rel="noopener">
                  {{  image | img_url: width:25 | img_tag  }}
                </a> 
              {% endfor %}
            </div>
        </div>

      </div>{% endcomment %}

        <div class="team-member">
        {% if members.employee_image != blank %}
          <div class="team-member-image">
           {{ members.employee_image | image_url: width:200 , height:200 |image_tag }}
          </div>
        {% endif %}
        
        
      <div class="team-member-detail-wrp">
        {% if members.employee_name != blank %}
          <p class="team-member-name">{{ members.employee_name | upcase }}</p>
        {% endif %}
        {% if members.employee_designation != blank %}
          <div class="team-member-position">{{ members.employee_designation | upcase }}</div>
        {% endif %}
        {% if members.employee_description != blank %}
            <div class="team-description">
              {{ members.employee_description }}
            </div>
        {% endif %}
            
            <div class="social-links">
             {% comment %} {% for image in  members.social_media_icons.value %}
                <a href="{{ members.icon_link.value[forloop.index0] }}" class="social-link" target="_blank" rel="noopener">
                  {{  image | img_url: width:25 | img_tag  }}
                </a> 
                {% endfor %}
            {% endcomment %}
              <div class="social-links">
