{{ 'section-product-catalog.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.35 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.35 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top | times: 0.4 | round: 0 }}px;
      padding-bottom: {{ section.settings.padding_bottom | times: 0.4 | round: 0 }}px;
    }
  }

  @media screen and (min-width: 1025px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="product-catalog-section section-{{ section.id }}-padding">
  <div class="product-catalog-container page-width">
    <div class="product-catalog-wrapper gradient color-{{ section.settings.color_scheme }}">
      <div class="grid grid--1-col grid--1-col-tablet grid--2-col-desktop">
        <div class="product-catalog-left grid__item">
          {% if section.settings.product_image %}
            <div class="product-image">
              {{ section.settings.product_image | image_url: width: 800 | image_tag }}
            </div>
          {% endif %}
        </div>
        
        <div class="product-catalog-right grid__item">
          {% if section.settings.logo %}
            <div class="logo">
              {{ section.settings.logo | image_url: width: 300 | image_tag }}
            </div>
          {% endif %}
          
          <h2 class="title">
            {{ section.settings.heading }}
          </h2>
          
          <div class="description">
            {{ section.settings.description }}
          </div>
          
          <div class="buttons">
            {% if section.settings.button_1_link %}
              <a href="{{ section.settings.button_1_link }}" class="button button--secondary">
                {{ section.settings.button_1_text }}
              </a>
            {% endif %}
            
            {% if section.settings.button_2_link %}
              <a href="{{ section.settings.button_2_link }}" class="button button--primary">
                {{ section.settings.button_2_text }}
              </a>
            {% endif %}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>


{% schema %}
{
  "name": "Product Catalog",
  "tag": "section",
  "class": "section product-catalog-sec",
  "settings": [
    {
      "type": "image_picker",
      "id": "product_image",
      "label": "Product Image"
    },
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo"
    },
    {
      "type": "richtext",
      "id": "heading",
      "label": "Heading",
      "default": "<p>Product Catalog 2024</p>"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "scheme-1"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Description",
      "default": "<p>Click the link to view our comprehensive product and services catalog. View in a browser window without the need for a download.</p>"
    },
    {
      "type": "text",
      "id": "button_1_text",
      "label": "Secondary Button Text",
      "default": "View Catalog"
    },
    {
      "type": "url",
      "id": "button_1_link",
      "label": "Primary Button Link"
    },
    {
      "type": "text",
      "id": "button_2_text",
      "label": "Primary Button Text",
      "default": "Download Catalog"
    },
    {
      "type": "url",
      "id": "button_2_link",
      "label": "Secondary Button Link"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 180,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 180,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ],
  "presets": [
    {
      "name": "Product Catalog"
    }
  ]
}
{% endschema %}