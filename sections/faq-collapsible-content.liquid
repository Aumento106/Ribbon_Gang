  "class": "section faq_collapsible_content",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "richtext",
      "id": "heading",
      "label": "t:sections.collapsible_content.settings.heading.label",
